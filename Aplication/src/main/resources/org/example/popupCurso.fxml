<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="267.0" prefWidth="412.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.PopupCursoController">
    <children>
        <!-- Troque o ComboBox por um TextField para o Curso -->
        <TextField fx:id="txtNomeCurso" layoutX="131.0" layoutY="70.0" prefWidth="150.0" promptText="Digite o Curso" style="-fx-background-color: #ffffff; -fx-border-color: #0400ff; -fx-border-radius: 50; -fx-background-radius: 50;" />

        <!-- Para o Turno, se vocÃª ainda quiser manter como ComboBox -->
        <ComboBox fx:id="comboPeriodo" layoutX="131.0" layoutY="112.0" prefWidth="150.0" promptText="Escolha o Turno" style="-fx-background-color: #ffffff; -fx-border-color: #0400ff; -fx-border-radius: 50; -fx-background-radius: 50; -fx-text-fill: white; -fx-prompt-text-fill: white;" />

        <Button fx:id="btnConfirmar" layoutX="131.0" layoutY="203.0" mnemonicParsing="false" onAction="#confirmar" style="-fx-background-color: #ffffff; -fx-border-color: #0400ff; -fx-background-radius: 50; -fx-border-radius: 50;" text="Confirmar" textFill="#0400ff">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>

        <Button fx:id="BtnCancelar" layoutX="214.0" layoutY="203.0" mnemonicParsing="false" onAction="#cancelar" style="-fx-background-color: #ffffff; -fx-border-color: #ff0028; -fx-background-radius: 50; -fx-border-radius: 50;" text="Cancelar" textFill="#ff0028">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>

        <ImageView fx:id="imgSinapspopup" fitHeight="48.0" fitWidth="53.0" layoutX="31.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@img/perfil.png" />
            </image>
        </ImageView>
        <ComboBox fx:id="comboCoordenador" layoutX="131.0" layoutY="152.0" prefWidth="150.0" promptText="Coordenador" style="-fx-background-color: #ffffff; -fx-border-color: #0400ff; -fx-border-radius: 50; -fx-background-radius: 50; -fx-text-fill: white; -fx-prompt-text-fill: white;" />
    </children>
</AnchorPane>
