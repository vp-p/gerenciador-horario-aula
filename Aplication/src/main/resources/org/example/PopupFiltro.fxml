<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.PopupFiltroController">
    <children>
        <!-- ComboBox para escolher o turno -->
        <ComboBox fx:id="comboCoordenador" layoutX="65.0" layoutY="42.0" prefHeight="27.0" prefWidth="170.0" promptText="Escolha o Coordenador" style="-fx-background-color: #ffffff; -fx-border-color: #0400ff; -fx-border-radius: 50; -fx-background-radius: 50;" />

        <!-- Botão Aplicar -->
        <Button fx:id="btnAplicar" layoutX="65.0" layoutY="110.0" mnemonicParsing="false" onAction="#Confirmar" style="-fx-background-color: #ffffff; -fx-border-color: #0400ff; -fx-background-radius: 50; -fx-border-radius: 50;" text="Aplicar" textFill="#0400ff">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>

        <!-- Botão Limpar -->
        <Button fx:id="btnLimpar" layoutX="177.0" layoutY="110.0" mnemonicParsing="false" onAction="#Limpar" style="-fx-background-color: #ffffff; -fx-border-color: #ff0000; -fx-background-radius: 50; -fx-border-radius: 50;" text="Limpar" textFill="#ff0000">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
